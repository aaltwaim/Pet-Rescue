<p id="notice"><%= notice %></p>

<h1>Comments</h1>
<%= link_to "New Comment", new_comment_path, { :class => "button waves-effect waves-light btn" } %>

<table class="striped bordered">
  <tr>
  
    <th>content</th>
  
    <th> Show </th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

  <% @comments.each do |comment| %>
      <tr>
        <td><%=comment.id  %></td>
        <td><%= comment.content %></td>
        <td><%= link_to "show", comment_path(comment) %></td>

        <td><a class="btn-floating btn-large red" href="<%= edit_comment_path(comment) %>" >
           <em class="large material-icons">Edit Comment</em>
          </a>
    </td>
    <td><a class="btn-floating btn-large red" data-confirm="Are you sure you want to delete <%= comment.id %>?"
     data-method="delete" href="/comments/<%= comment.id %>" rel="nofollow"><i class="large material-icons">Delete Report</i>
    </a>
    </td>
      </tr>
  <% end %>
</table>