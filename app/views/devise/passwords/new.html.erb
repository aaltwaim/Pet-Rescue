 <div class="container">  
 <div class="jumbotron forgotbg my-5">
  <h1 class="text-white ml-5">Forgot your password?</h1>


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field text-white font-weight-bold mt-2 ml-5">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:"btn btn-light mt-2 ml-5" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>