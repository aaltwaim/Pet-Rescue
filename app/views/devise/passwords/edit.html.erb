  <div class="container">  
 <div class="jumbotron forgotbg my-5">
  <h1 class="text-white ml-5">Change your password</h1>


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field text-white font-weight-bold mt-2 ml-5">
    <%= f.label :password, "New password" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field text-white font-weight-bold mt-1 ml-5">
    <%= f.label :password_confirmation, "Confirm new password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password", class:"btn btn-light mt-2 ml-5" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>