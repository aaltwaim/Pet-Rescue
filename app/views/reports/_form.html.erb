<%= form_for @report do |form| %>

 <div class="field">
  <%= form.label :reporttype, 'Report Type'%><br>
        <%= form.select :reporttype, ['Lost', 'Find']%>
  </div>
<div class="field">
  <%= form.label :species, 'Pet Species'%> <br>
        <%= form.select :species, ['Cat', 'Dog', 'Bird', 'Small Animals']%>
  </div>

  <div class="field">
  	<%= form.label :img, 'Pet Image' %><br>
  	<%= form.text_field :img %>
  </div>

    <div class="field">
  	<%= form.label :petname, 'Pet Name'%><br> 
  	<%= form.text_field :petname%>
  </div>





<div class="form-check">
<%= form.label :gender, 'Pet Gender'%><br>
Male <%= form.radio_button :gender, "female"%>
Female <%= form.radio_button :gender, "male" %>
 </div>

      <div class="field">
    <%= form.label :color, 'Pet Color' %><br>
    <%= form.text_field :color %>
  </div>
     <div class="field">
    <%= form.label :descriptions, 'Pet Description'%><br>
    <%= form.text_area :descriptions %>
  </div>




 <div class="form-group">
    <%= form.label :address, 'Address'%><br>
    <%= form.text_field :address, class:"form-control", placeholder:"1234 Main St, Makkah"%>
  </div>




     <div class="field">
    <%= form.label :date,'Data' %><br>
    <%= form.text_field :date %>
  </div>

     <div class="field">
    <%= form.label :phone,'Contact Phone Number' %><br>
    <%= form.text_field :phone %>
  </div>

  <div class="field">
    <%= form.label :email, 'Contact Email' %> <br>
    <%= form.text_field :email %>
  </div>



  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<%= link_to 'Back', reports_path %>
